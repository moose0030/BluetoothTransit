<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.matthewpreston.bluetoothtransit.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/background_material_dark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Bus Time"
        android:id="@+id/nextBusButton"
        android:layout_gravity="top"
        android:layout_below="@+id/routeSpinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/routeSpinner"
        android:layout_below="@+id/getBusDescr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nextBusButton"
        android:layout_alignEnd="@+id/nextBusButton" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Connect"
        android:id="@+id/bluetoothConnectButton"
        android:layout_gravity="center"
        android:layout_below="@+id/wifiConnectButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Connect"
        android:id="@+id/wifiConnectButton"
        android:layout_below="@+id/connectStationDescr"
        android:layout_alignRight="@id/bluetoothConnectButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Force Bluetooth Connection"
        android:id="@+id/bluetoothBox"
        android:layout_below="@+id/wifiBox"
        android:layout_alignLeft="@+id/wifiBox"
        android:layout_alignStart="@+id/wifiBox"
        android:checked="false"
        android:layout_gravity="bottom"
        android:textColor="@color/bright_foreground_material_dark"
        android:buttonTint="@color/background_material_light" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Force WiFi Connection"
        android:id="@+id/wifiBox"
        android:checked="false"
        android:layout_gravity="top"
        android:layout_alignTop="@+id/routeSpinner"
        android:layout_toRightOf="@+id/routeSpinner"
        android:textColor="@color/bright_foreground_material_dark"
        android:buttonTint="@color/background_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Connect to Station"
        android:id="@+id/connectStationDescr"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nextBusButton"
        android:textStyle="italic"
        android:layout_gravity="left"
        android:textColor="@color/bright_foreground_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Results:"
        android:id="@+id/resultsDescr"
        android:layout_below="@+id/bluetoothConnectButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:textColor="@color/bright_foreground_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Get Bus Time"
        android:id="@+id/getBusDescr"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:textColor="@color/bright_foreground_material_dark"
        android:textStyle="italic" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected"
        android:id="@+id/wifiRadio"
        android:checked="true"
        android:layout_gravity="top|center"
        android:layout_above="@+id/bluetoothConnectButton"
        android:layout_toRightOf="@id/wifiConnectButton"
        android:textColor="@color/bright_foreground_material_dark" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected"
        android:id="@+id/bluetoothRadio"
        android:layout_toRightOf="@id/bluetoothConnectButton"
        android:checked="true"
        android:layout_alignBottom="@+id/bluetoothConnectButton"
        android:layout_gravity="center"
        android:textColor="@color/bright_foreground_material_dark" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@+id/resultsDescr"
        android:fillViewport="true">


        <TextView
            android:id="@+id/results"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:textColor="@color/background_material_light" />

    </ScrollView>



</RelativeLayout>
